@model BookCatalog.Models.Book

<li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
        <h5 class="mb-1">@Model.Title</h5>
        <small class="text-muted">by @Model.Author</small>
        <div>
            <span class="badge bg-secondary">@Model.Genre</span>
            <small class="text-muted">Published: @Model.PublishedDate.ToShortDateString()</small>
        </div>
    </div>
    <div>
        <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Edit</a>
        <a asp-controller="Books" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Delete</a>
    </div>
</li>